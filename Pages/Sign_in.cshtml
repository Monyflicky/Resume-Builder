@page
@model Sign_inModel
@{
    ViewData["Title"] = "Sign UP page";
}
@{
Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorPagesResume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container my-5">
        <div class="row row-cols-3">
                <div class="col">

                </div>
                <div class="col border px-2 pt-2">
                        <form method="post">
                            <h4 class="font-weight-normal text-primary m-2 mt-3 text-center">ResumeHub</h4>
                            <h6 class="font-weight-normal text-secondary m-2 mt-3 text-center">Sign-in to Your Account.</h6>
                           <div class="form-group m-2 mt-3 fs-6 fw-light">
                                    <input type="text" @*asp-for="MO"*@ class="form-control py-4" id="exampleFormControlInput_1" placeholder="Email Address"/>
                            </div>
                            <div class="form-group m-2 mt-3 fs-6 fw-light text-black-50">
                                    <input type="password" @*asp-for="MO"*@ class="form-control py-4 " id="exampleFormControlInput_2" placeholder="Password (Must be between 6-16 characters)"/>
                            </div>
                            <div class="form-group m-2 mt-3">
                               <button class="btn btn-danger py-2" 
                               style="--bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; width: 100%;"
                               type="button">SIGN IN</button>
                            </div>
                       </form>
                       <div class="mt-4 p-1" style="background-color: #f5f5f4;">
                            <p class="text-primary text-center">Forgot your password?</p>
                            <p class="text-body text-center"><span>Don't have an account?</span><span> </span><span class="text-primary">Sign Up</span></p>
                       </div>
                </div>
                <div class="col">

                </div>
                </div>
    </div>
</body>

